general {

        colors = true
        interval = 1
}

order += "load"
order += "disk /"
# order += "run_watch VPN"
order += "ethernet tun0"
order += "wireless _first_"
order += "battery 0"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "W: %ip (%quality @ %essid, %bitrate)"
        format_down = "W: down"
}

ethernet tun0 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "VPN: %ip"
        format_down = "VPN: off"
}

battery 0 {
        format = "%status %percentage %remaining (%consumption)"
        format_down = "No battery"
        status_chr = "⚇"
        status_bat = "⚡"
        status_full = "F"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

run_watch DHCP {
        pidfile = "/var/run/dhcpcd*.pid"
}

run_watch VPN {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/openvpn*.pid"
}

tztime local {
        format = "%d-%m-%Y %H:%M:%S"
}

load {
        format = "%1min %5min %15min"
}

disk "/" {
        format = "%avail"
}

volume master {
        format = "Vol: %volume"
        format_muted = "Vol: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
